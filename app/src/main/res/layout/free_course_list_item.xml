<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/free_course_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/course_image_height"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/list_item_padding_tb"
        android:paddingEnd="@dimen/list_item_padding_lr"
        android:paddingLeft="@dimen/list_item_padding_lr"
        android:paddingRight="@dimen/list_item_padding_lr"
        android:paddingStart="@dimen/list_item_padding_lr"
        android:paddingTop="@dimen/list_item_padding_tb">

        <TextView
            android:id="@+id/free_course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:textSize="@dimen/free_course_title_size"
            tools:text="@string/free_course_title" />

        <TextView
            android:id="@+id/free_course_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            tools:text="( Course Id : ud389 )" />

        <TextView
            android:id="@+id/free_course_short_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="@string/free_course_short_summary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/free_course_gap"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/free_course_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                tools:text="Duration\nApprox. 2 weeks" />

            <TextView
                android:id="@+id/free_course_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/level_circle"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:text="Beginner" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>