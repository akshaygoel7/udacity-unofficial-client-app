<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/list_item_padding_tb"
    tools:context="xyz.abhaychauhan.www.udacityunofficialclient.TracksDetailsActivity">

    <TextView
        android:id="@+id/track_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-medium"
        android:textSize="@dimen/free_course_title_size"
        tools:text="@string/track_name" />

    <TextView
        android:id="@+id/track_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingLeft="@dimen/list_item_padding_lr"
        android:paddingRight="@dimen/list_item_padding_lr"
        android:textSize="16sp"
        tools:text="@string/free_course_short_summary" />

    <ListView
        android:id="@+id/track_course_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_item_padding_lr"
        android:visibility="gone"></ListView>

</LinearLayout>
